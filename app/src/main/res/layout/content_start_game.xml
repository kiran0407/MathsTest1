<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#1E2538"
    android:id="@+id/nnmmkk"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.exm.vamsipriya.mathstest.StartGame"
    tools:showIn="@layout/activity_start_game">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_weight="1"
        android:id="@+id/njjkj"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:weightSum="4">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:textColor="#F5FA55"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:textSize="16sp"
                android:text="CORRECT" />
            <TextView
                android:id="@+id/correct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:textStyle="bold"
                android:textSize="20sp"

                />


        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="2">

            <ProgressBar
                android:id="@+id/progressBarCircle"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/drawable_circle_dark_blue"
                android:indeterminate="false"
                android:max="100"
                android:progress="100"
                android:progressDrawable="@drawable/drawable_circle_yellow"
                android:rotation="100"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/textViewTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@color/colorYellow"
                android:textSize="40sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="55dp" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_alignTop="@+id/textViewTime"
                android:layout_marginEnd="25dp"
                android:textColor="#F5FA55"
                android:textSize="16sp"
                android:layout_marginRight="29dp"
                android:text="WRONG" />

            <TextView
                android:id="@+id/wrng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:textSize="20sp"
                />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        android:layout_below="@+id/njjkj"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/njjkj"
            android:id="@+id/scr"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scr1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/store_ans"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textColor="#F5FA55"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:weightSum="2"
                android:id="@+id/scr3"
                android:orientation="horizontal" >


                <info.hoang8f.widget.FButton
                    android:id="@+id/playagain"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="0.22"
                    android:layout_marginLeft="29dp"
                    android:layout_marginRight="10dp"
                    android:minHeight="@dimen/demo_button_min_height"
                    android:minWidth="110dp"
                    android:text="play again"
                    android:paddingRight="15dp"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:drawableLeft="@drawable/ic_slow_motion_video_black_24dp"
                    fbutton:buttonColor="@color/fbutton_color_wet_asphalt"
                    fbutton:shadowEnabled="true" />
                <info.hoang8f.widget.FButton
                    android:id="@+id/share"

                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="0.55"
                    android:minHeight="@dimen/demo_button_min_height"
                    android:textSize="20sp"
                    android:minWidth="110dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="share"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_share_black_24dp"
                    android:textColor="@android:color/white"
                    fbutton:buttonColor="@color/fbutton_color_wet_asphalt"
                    fbutton:shadowEnabled="true" />



            </LinearLayout>


        </LinearLayout>



        <android.support.v7.widget.CardView
            app:cardCornerRadius="5dp"
            android:layout_margin="7dp"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardView1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="2">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1.2"
                    android:id="@+id/question"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="6dp"
                    android:text=""/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:focusableInTouchMode="false"
                    android:focusable="false"
                    android:id="@+id/str"
                    android:background="@android:color/transparent"
                    android:hint="   = ?"
                    android:gravity="center"
                    android:layout_weight="0.8"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:weightSum="4"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:weightSum="3"
                android:orientation="horizontal" >

                <info.hoang8f.widget.FButton
                    android:id="@+id/btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="1"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    fbutton:buttonColor="@color/fbutton_color_wet_asphalt"
                    fbutton:shadowEnabled="true" />
                <info.hoang8f.widget.FButton
                    android:id="@+id/btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:textSize="20sp"

                    android:layout_marginRight="5dp"
                    android:text="2"
                    android:textColor="@android:color/white"
                    fbutton:buttonColor="@color/fbutton_color_wet_asphalt"
                    fbutton:shadowEnabled="true" />
                <info.hoang8f.widget.FButton
                    android:id="@+id/btn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:text="3"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/white"
                    fbutton:buttonColor="@color/fbutton_color_wet_asphalt"
                    fbutton:shadowEnabled="true" />


            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_weight="1"
                android:orientation="horizontal" >
                <info.hoang8f.widget.FButton
                    android:id="@+id/btn4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="4"
                    android:textColor="@android:color/white"
                    fbutton:buttonColor="@color/fbutton_color_wet_asphalt"
                    fbutton:shadowEnabled="true" />
                <info.hoang8f.widget.FButton
                    android:id="@+id/btn5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="5"
                    android:textColor="@android:color/white"
                    fbutton:buttonColor="@color/fbutton_color_wet_asphalt"
                    fbutton:shadowEnabled="true" />
                <info.hoang8f.widget.FButton
                    android:id="@+id/btn6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_weight="1"

                    android:text="6"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/white"
                    fbutton:buttonColor="@color/fbutton_color_wet_asphalt"
                    fbutton:shadowEnabled="true" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:weightSum="3"
                android:layout_weight="1"

                android:orientation="horizontal" >
                <info.hoang8f.widget.FButton
                    android:id="@+id/btn7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_weight="1"

                    android:layout_margin="5dp"
                    android:text="7"
                    android:textColor="@android:color/white"
                    fbutton:buttonColor="@color/fbutton_color_wet_asphalt"
                    fbutton:shadowEnabled="true" />
                <info.hoang8f.widget.FButton
                    android:id="@+id/btn8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="8"
                    android:textColor="@android:color/white"
                    fbutton:buttonColor="@color/fbutton_color_wet_asphalt"
                    fbutton:shadowEnabled="true" />
                <info.hoang8f.widget.FButton
                    android:id="@+id/btn9"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="9"

                    android:textColor="@android:color/white"
                    fbutton:buttonColor="@color/fbutton_color_wet_asphalt"
                    fbutton:shadowEnabled="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:weightSum="3"
                android:layout_weight="1"

                android:orientation="horizontal" >
                <info.hoang8f.widget.FButton
                    android:id="@+id/btn0"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="0"
                    android:textColor="@android:color/white"
                    fbutton:buttonColor="@color/fbutton_color_wet_asphalt"
                    fbutton:shadowEnabled="true" />
                <info.hoang8f.widget.FButton
                    android:id="@+id/dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="."
                    android:textColor="@android:color/white"
                    fbutton:buttonColor="@color/fbutton_color_wet_asphalt"
                    fbutton:shadowEnabled="true" />
                <info.hoang8f.widget.FButton
                    android:id="@+id/enter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="clear"

                    android:textColor="@android:color/white"
                    fbutton:buttonColor="@color/fbutton_color_wet_asphalt"
                    fbutton:shadowEnabled="true" />
            </LinearLayout>






        </LinearLayout>





    </LinearLayout>


</RelativeLayout>

